<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry
            location="${user.home}/.m2/repository/mysql/mysql-connector-java/5.1.38/mysql-connector-java-5.1.38.jar"/>
    <context id="context1">

        <!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>

        <commentGenerator>
            <!-- 去掉自动生成的注释 -->
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection connectionURL="jdbc:mysql://localhost/phynos"
                        driverClass="com.mysql.jdbc.Driver" password="root" userId="root"/>
        <javaModelGenerator targetPackage="com.phynos.springboot.webapi.model.master"
                            targetProject="src\main\java"/>
        <sqlMapGenerator targetPackage="mapper.master"
                         targetProject="src\main\resources"/>
        <javaClientGenerator targetPackage="com.phynos.springboot.webapi.dao.master"
                             targetProject="src\main\java" type="XMLMAPPER"/>

        <table tableName="sys%">
            <!-- 保持字段的原名
            <property name="useActualColumnNames" value="true"/>
            -->
            <generatedKey column="id" sqlStatement="Mysql"/>
            <!-- 搜索字符串必须大写开头（因为类名是大写开头的） -->
            <domainObjectRenamingRule searchString="^Sys"
                                      replaceString=""/>

        </table>
    </context>

    <context id="context2">

        <!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>

        <commentGenerator>
            <!-- 去掉自动生成的注释 -->
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection connectionURL="jdbc:mysql://localhost/phynos_slave"
                        driverClass="com.mysql.jdbc.Driver" password="root" userId="root"/>
        <javaModelGenerator targetPackage="com.phynos.springboot.webapi.model.slave"
                            targetProject="src\main\java"/>
        <sqlMapGenerator targetPackage="mapper.slave"
                         targetProject="src\main\resources"/>
        <javaClientGenerator targetPackage="com.phynos.springboot.webapi.dao.slave"
                             targetProject="src\main\java" type="XMLMAPPER"/>

        <table tableName="sys%">
            <!-- 保持字段的原名
            <property name="useActualColumnNames" value="true"/>
            -->
            <generatedKey column="id" sqlStatement="Mysql"/>
            <!-- 搜索字符串必须大写开头（因为类名是大写开头的） -->
            <domainObjectRenamingRule searchString="^Sys"
                                      replaceString=""/>

        </table>
    </context>
</generatorConfiguration>